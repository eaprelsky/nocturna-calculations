# Nocturna Calculations - Production Environment Configuration
# Copy this file to production.env and fill in the values
# IMPORTANT: Keep this file secure and never commit the real production.env to git!

# ===== Environment Identification =====
ENVIRONMENT=production

# ===== API Ports (Blue-Green Deployment) =====
BLUE_API_PORT=8200
GREEN_API_PORT=8201

# ===== Nginx Configuration =====
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===== Database Configuration =====
POSTGRES_DB=nocturna_prod
POSTGRES_USER=nocturna_prod_user
POSTGRES_PASSWORD=CHANGE_ME_VERY_STRONG_PASSWORD_HERE
PROD_POSTGRES_PORT=5434

# ===== Redis Configuration =====
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD_HERE
PROD_REDIS_PORT=6381

# ===== Security =====
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_SECRET_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ===== User Management =====
ALLOW_USER_REGISTRATION=false
REGISTRATION_REQUIRES_APPROVAL=true
MAX_USERS_LIMIT=1000

# ===== CORS Configuration =====
# Specify your production domains only
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# ===== Rate Limiting =====
RATE_LIMIT_DEFAULT=1000
RATE_LIMIT_PREMIUM=10000
RATE_LIMIT_WINDOW=3600

# ===== Logging =====
LOG_LEVEL=INFO
DEBUG=false

# ===== Image Configuration =====
# Use semantic versioning tags for production
IMAGE_TAG=v1.0.0

# ===== Backup Configuration =====
BACKUP_RETENTION_DAYS=30

# ===== SSL/TLS (if using HTTPS) =====
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
