# Nocturna Calculations - Staging Environment Configuration
# Copy this file to staging.env and fill in the values

# ===== Environment Identification =====
ENVIRONMENT=staging

# ===== API Ports =====
STAGING_API_PORT=18100

# ===== Database Configuration =====
POSTGRES_DB=nocturna_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
STAGING_POSTGRES_PORT=15433

# ===== Redis Configuration =====
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE
STAGING_REDIS_PORT=16380

# ===== Security =====
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_SECRET_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== User Management =====
ALLOW_USER_REGISTRATION=true
REGISTRATION_REQUIRES_APPROVAL=false
MAX_USERS_LIMIT=50

# ===== CORS Configuration =====
# Allow all origins for staging (for testing)
CORS_ORIGINS=["*"]

# ===== Rate Limiting =====
# More permissive limits for staging
RATE_LIMIT_DEFAULT=2000
RATE_LIMIT_PREMIUM=20000
RATE_LIMIT_WINDOW=3600

# ===== Logging =====
LOG_LEVEL=DEBUG
DEBUG=true

# ===== Image Configuration =====
IMAGE_TAG=staging-latest
